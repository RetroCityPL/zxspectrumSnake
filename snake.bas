   1 RANDOMIZE
   2 LET hi=0
   3 GO SUB 9000
  10 CLS
  20 DIM x(3000): DIM y(3000)
  30 LET xx=15: LET yy=11: LET vx=1: LET vy=0: LET L=1: LET score=0: LET c=1
  40 LET x(1)=xx: LET y(1)=yy
  50 GO SUB 8000
  60 PRINT AT 11,11;"S - Start"
  70 IF INKEY$="s" THEN GO TO 1000
  80 GO TO 70
1000 REM main loop
1010 PRINT AT 11,11;"         "
1020 PRINT INK 4;AT y(1),x(1);CHR$ 144
1025 GO SUB 7000
1026 BEEP 0.5,0: BEEP 0.5,2: BEEP 0.5,5
1030 LET xx=xx+vx: LET yy=yy+vy
1044 IF ATTR (yy,xx)-56=2 THEN GO SUB 4000
1045 IF ATTR (yy,xx)-56=4 OR xx=0 OR xx=31 OR yy=1 OR yy=21 THEN GO TO 5000
1050 PRINT INK 4;AT yy,xx;CHR$ 144
1060 PRINT AT y(c),x(c);" "
1070 LET x(c+L)=xx: LET y(c+L)=yy: LET c=c+1
1100 IF INKEY$="a" THEN LET vx=-1: LET vy=0
1110 IF INKEY$="d" THEN LET vx=1: LET vy=0
1120 IF INKEY$="w" THEN LET vx=0: LET vy=-1
1130 IF INKEY$="s" THEN LET vx=0: LET vy=1
1140 GO TO 1027
4000 REM eat a fruit
4010 BEEP .1,16
4012 LET x(c+L)=xx: LET y(c+L)=yy
4015 LET L=L+1
4030 LET score=score+10
4040 PRINT AT 0,22;"Score:";score
4050 GO SUB 7000
4060 RETURN
5000 REM death
5010 BEEP 0.5,5: BEEP 0.5,2: BEEP 0.5,0
5020 PRINT FLASH 1;AT 10,11;"Game Over!"
5030 PRINT AT 11,2;"Press any key to start again"
5040 IF score>hi THEN LET hi=score
5050 IF INKEY$<>"" THEN GO TO 10
5060 GO TO 5050
7000 REM draw a fruit
7010 LET fy=INT (RND*18)+2: LET fx=INT (RND*29)+1
7015 IF ATTR (fy,fx)-56=4 THEN GO TO 7010
7020 PRINT INK 2;AT fy,fx;CHR$ 145
7030 RETURN
8000 REM draw the main screen
8010 PRINT AT 0,0;"Hi:";hi
8020 PRINT AT 0,22;"Score:";score
8030 FOR i=0 TO 31
8040 PRINT PAPER 0;AT 1,i;" ";AT 21,i;" "
8050 NEXT i
8060 FOR i=1 TO 20
8070 PRINT PAPER 0;AT i,0;" ";AT i,31;" "
8080 NEXT i
8085 INK 4: PLOT 150,175: DRAW -60,-6: DRAW 60,0: DRAW -6,3: DRAW 6,3: PLOT INK 2;146,173: INK 0
8090 RETURN
9000 REM UDG graphics
9010 RESTORE 9011: FOR F=65368 TO 65383: READ A: POKE F,A: NEXT F
9020 DATA 60,126,255,255,255,255,126,60
9030 DATA 24,8,60,126,126,60,24,24
9100 RETURN
